{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build@2.0.0",
      "config": { "distDir": "dist" }
    },
    {
      "src": "admin/package.json",
      "use": "@vercel/static-build@2.0.0",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node@3.0.0"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.ts" },
    { "src": "/admin/assets/(.*)", "dest": "/admin/dist/assets/$1" },
    { "src": "/admin", "dest": "/admin/dist/index.html" },
    { "src": "/admin/(.*)", "dest": "/admin/dist/index.html" },
    { "src": "/assets/(.*)", "dest": "/frontend/dist/assets/$1" },
    { "src": "/", "dest": "/frontend/dist/index.html" },
    { "src": "/(.*)", "dest": "/frontend/dist/index.html" }
  ]
}
