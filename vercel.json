{
  "version": 2,
  "builds": [
    {
      "src": "frontend/vite.config.ts",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/dist" }
    },
    {
      "src": "admin/vite.config.ts",
      "use": "@vercel/static-build",
      "config": { "distDir": "admin/dist" }
    },
    {
      "src": "api/index.ts",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.ts" },
    { "source": "/admin/assets/(.*)", "destination": "/admin/dist/assets/$1" },
    { "source": "/admin", "destination": "/admin/dist/index.html" },
    { "source": "/admin/(.*)", "destination": "/admin/dist/index.html" },
    { "source": "/assets/(.*)", "destination": "/frontend/dist/assets/$1" },
    { "source": "/", "destination": "/frontend/dist/index.html" },
    { "source": "/(.*)", "destination": "/frontend/dist/index.html" }
  ]
}
